{
	"info": {
		"_postman_id": "random-uuid",
		"name": "MealMind API",
		"description": "API collection for MealMind project",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/register",
							"host": ["{{base_url}}"],
							"path": ["api", "register"]
						},
						"description": "Register a new user"
					}
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/login",
							"host": ["{{base_url}}"],
							"path": ["api", "login"]
						},
						"description": "Login with email and password"
					}
				},
				{
					"name": "Logout",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{auth_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/logout",
							"host": ["{{base_url}}"],
							"path": ["api", "logout"]
						},
						"description": "Logout and invalidate token"
					}
				},
				{
					"name": "Get User Info",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{auth_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/user",
							"host": ["{{base_url}}"],
							"path": ["api", "user"]
						},
						"description": "Get authenticated user information"
					}
				}
			],
			"description": "Authentication related endpoints"
		},
		{
			"name": "User Profile",
			"item": [
				{
					"name": "Get Profile",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{auth_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/profile",
							"host": ["{{base_url}}"],
							"path": ["api", "profile"]
						},
						"description": "Get the authenticated user's profile. The response includes the AI-calculated daily calorie target."
					}
				},
				{
					"name": "Create Profile",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{auth_token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"goals\": \"Lose weight and build muscle\",\n    \"diet_type\": \"keto\",\n    \"allergies\": [\"peanuts\", \"shellfish\"],\n    \"weight\": 75.5,\n    \"height\": 180,\n    \"activity_level\": \"moderate\",\n    \"gender\": \"male\",\n    \"date_of_birth\": \"1990-01-01\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/profile",
							"host": ["{{base_url}}"],
							"path": ["api", "profile"]
						},
						"description": "Create a new profile for the authenticated user. The daily calorie target will be automatically calculated by AI based on the provided information. You can optionally provide 'daily_calories_target' to override the AI calculation."
					}
				},
				{
					"name": "Update Profile",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{auth_token}}",
									"type": "string"
								}
							]
						},
						"method": "PUT",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"goals\": \"Maintain weight and improve strength\",\n    \"weight\": 73.5,\n    \"activity_level\": \"very_active\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/profile",
							"host": ["{{base_url}}"],
							"path": ["api", "profile"]
						},
						"description": "Update the authenticated user's profile. When updating weight, height, activity_level, gender, date_of_birth, or goals, the daily calorie target will be automatically recalculated by AI unless manually specified."
					}
				},
				{
					"name": "Delete Profile",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{auth_token}}",
									"type": "string"
								}
							]
						},
						"method": "DELETE",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/profile",
							"host": ["{{base_url}}"],
							"path": ["api", "profile"]
						},
						"description": "Delete the authenticated user's profile"
					}
				}
			],
			"description": "User profile management endpoints with AI-powered calorie calculations"
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000"
		}
	]
} 